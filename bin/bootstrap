#!/usr/bin/env bash

# NOTE: using connection=paramiko (python ssh) instead of ssh
# until ssh keys are exchanged.
# This would otherwise require installing `sshpass` on macOS...
cd "$(dirname "$0")/.."
exec ansible-playbook \
  --inventory=raspberries \
  --connection=paramiko \
  --ask-pass \
  base.yml \
  $@
